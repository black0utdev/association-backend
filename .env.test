# Test environment variables for CI/CD
APP_ENV=test
DEBUG=false
SECRET_KEY=test-secret-key-for-ci-testing
APP_PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://test_user:test_password@localhost:5432/test_db
POSTGRES_DB=test_db
POSTGRES_USER=test_user
POSTGRES_PASSWORD=test_password
POSTGRES_PORT=5432

# Authelia
AUTHELIA_URL=http://localhost:9091
AUTHELIA_PORT=9091
AUTHELIA_JWT_SECRET=test-jwt-secret
AUTHELIA_SESSION_SECRET=test-session-secret
AUTHELIA_STORAGE_ENCRYPTION_KEY=test-encryption-key
AUTHELIA_DB=authelia
OAUTH2_CLIENT_ID=test-client
OAUTH2_CLIENT_SECRET=test-oauth-secret
OAUTH2_REDIRECT_URI=http://localhost:8000/auth/callback

# CORS
ALLOWED_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
FORCE_HTTPS=false
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax
